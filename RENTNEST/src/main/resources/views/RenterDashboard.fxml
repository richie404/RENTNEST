<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.rentnest.controllers.RenterDashboardController"
            stylesheets="@../css/renterdashboard.css">

    <top>
        <HBox styleClass="header" spacing="16" alignment="CENTER_LEFT" BorderPane.alignment="CENTER">
            <Label text="🔑 Renter Dashboard" styleClass="label-title"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="Logout" onAction="#handleLogout" styleClass="button-secondary"/>
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20" padding="20">
            <Label text="Browse & Manage Rentals" styleClass="page-title"/>

            <HBox spacing="12" alignment="CENTER">
                <Button text="🔍 Browse Properties" onAction="#handleBrowse"   styleClass="button-primary"/>
                <Button text="❤️ My Favorites"      onAction="#handleFavorites" styleClass="button-primary"/>
                <Button text="📩 Booking Requests"  onAction="#handleBookings"  styleClass="button-primary"/>
            </HBox>

            <Label text="Favorites / Recent places" styleClass="section-title"/>
            <ListView fx:id="favoritesList" prefHeight="260" prefWidth="720" />
        </VBox>
    </center>
</BorderPane>
