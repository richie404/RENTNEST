<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.rentnest.controllers.HomepageController"
            stylesheets="@../css/homepage.css">

    <!-- Navbar -->
    <top>
        <HBox spacing="20" styleClass="header">
            <Label text="🏠 RentNest" styleClass="header-title"/>
            <Button text="Login" onAction="#handleLogin" styleClass="header-button"/>
            <Button text="Register" onAction="#handleRegister" styleClass="header-button"/>
        </HBox>
    </top>

    <!-- Center Content -->
    <center>
        <VBox alignment="CENTER" spacing="15">
            <Label text="Find Your Perfect Home" styleClass="page-title"/>
            <Label text="Browse properties for rent or list your own today." styleClass="page-subtitle"/>
            <HBox alignment="CENTER" spacing="10">
                <Button text="Browse Properties" onAction="#handleBrowse" styleClass="button-primary"/>
                <Button text="List Your Property" onAction="#handleListings" styleClass="button-primary"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>
