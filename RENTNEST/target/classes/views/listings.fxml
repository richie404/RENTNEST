<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.rentnest.controllers.ListingsController">

    <top>
        <Button text="Back" onAction="#handleBack" style="-fx-background-color: gray; -fx-text-fill: white;" />
    </top>

    <center>
        <VBox alignment="CENTER" spacing="10">
            <Label text="List Your Property" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
            <TextField promptText="Property Name" />
            <TextField promptText="Location" />
            <TextField promptText="Price" />
            <Button text="Submit Listing" onAction="#handleSubmitListing" style="-fx-background-color: #2F64F9; -fx-text-fill: white;" />
        </VBox>
    </center>

</BorderPane>
