<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.rentnest.controllers.RegisterController"
            stylesheets="@../css/register.css">

    <!-- Center everything -->
    <VBox alignment="CENTER" spacing="20" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">

        <!-- Register Card -->
        <VBox styleClass="register-card">
            <Label text="Create Account âœ¨" styleClass="register-title"/>
            <Label text="Join RentNest today" style="-fx-text-fill: #555; -fx-font-size: 12px;"/>

            <Label text="Full Name"/>
            <TextField fx:id="nameField" promptText="Enter your full name" styleClass="text-field"/>

            <Label text="Username"/>
            <TextField fx:id="usernameField" promptText="Choose a username" styleClass="text-field"/>

            <Label text="Email"/>
            <TextField fx:id="emailField" promptText="Enter your email" styleClass="text-field"/>

            <Label text="Password"/>
            <PasswordField fx:id="passwordField" promptText="Create a password" styleClass="password-field"/>

            <Label text="Confirm Password"/>
            <PasswordField fx:id="confirmPasswordField" promptText="Re-enter password" styleClass="password-field"/>

            <Button text="Register" onAction="#handleSubmitRegister" styleClass="button-register"/>
            <Button text="Back" onAction="#handleBack" styleClass="button-secondary"/>
        </VBox>
    </VBox>
</AnchorPane>
