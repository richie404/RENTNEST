<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="AdminBookingManagementController"
            stylesheets="@shared.css"
            prefWidth="950" prefHeight="700">

    <!-- Top Section (Title) -->
    <top>
        <VBox spacing="10">
            <padding>
                <Insets top="20" right="20" bottom="10" left="20"/>
            </padding>
            <Label text="ðŸ“… All Bookings"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Separator/>
        </VBox>
    </top>

    <!-- Center Section (Table) -->
    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20"/>
            </padding>
            <TableView fx:id="bookingTable" styleClass="table-view" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colId" text="Booking ID" prefWidth="100"/>
                    <TableColumn fx:id="colProperty" text="Property ID" prefWidth="120"/>
                    <TableColumn fx:id="colRenter" text="Renter ID" prefWidth="120"/>
                    <TableColumn fx:id="colOwner" text="Owner ID" prefWidth="120"/>
                    <TableColumn fx:id="colStart" text="Start Date" prefWidth="120"/>
                    <TableColumn fx:id="colEnd" text="End Date" prefWidth="120"/>
                    <TableColumn fx:id="colAmount" text="Total Amount" prefWidth="140"/>
                    <TableColumn fx:id="colStatus" text="Status" prefWidth="180"/>
                </columns>
            </TableView>
        </VBox>
    </center>

    <!-- Bottom Section (Buttons) -->
    <bottom>
        <HBox spacing="12" alignment="CENTER_RIGHT">
            <padding>
                <Insets top="10" right="20" bottom="20" left="20"/>
            </padding>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="Approve" onAction="#handleApprove" styleClass="button-primary"/>
            <Button text="Reject" onAction="#handleReject" styleClass="button-primary"/>
            <Button text="Delete" onAction="#handleDelete" styleClass="button-secondary"/>
        </HBox>
    </bottom>

</BorderPane>
