<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="BookPropertyController"
            stylesheets="@bookproperty.css"
            prefWidth="900" prefHeight="700">

    <!-- ====== Header ====== -->
    <top>
        <HBox styleClass="header" spacing="20">
            <Label text="🏠 Confirm Your Booking" styleClass="label-title"/>
            <Pane HBox.hgrow="ALWAYS"/>
        </HBox>
    </top>

    <!-- ====== Scrollable Form ====== -->
    <center>
        <ScrollPane fitToWidth="true"
                    vbarPolicy="AS_NEEDED"
                    hbarPolicy="NEVER"
                    style="-fx-background-color: transparent;">
            <content>
                <VBox alignment="CENTER" spacing="30">
                    <padding>
                        <Insets top="40" bottom="40" left="30" right="30"/>
                    </padding>

                    <!-- Property Summary -->
                    <VBox styleClass="property-summary" alignment="CENTER">
                        <Label fx:id="propertyName" styleClass="property-summary-title"/>
                        <Text text="Please review the property details before confirming your booking."
                              styleClass="form-subtitle"
                              wrappingWidth="500"/>
                    </VBox>

                    <!-- Booking Form -->
                    <VBox fx:id="formContainer"
                          styleClass="booking-form-container"
                          spacing="24"
                          alignment="CENTER">

                        <!-- Name -->
                        <VBox styleClass="form-section">
                            <Label text="Full Name" styleClass="field-label"/>
                            <TextField fx:id="renterNameField"
                                       promptText="Enter your name"
                                       styleClass="text-field"/>
                        </VBox>

                        <!-- Contact -->
                        <VBox styleClass="form-section">
                            <Label text="Contact Number" styleClass="field-label"/>
                            <TextField fx:id="renterContactField"
                                       promptText="Enter your phone number"
                                       styleClass="text-field"/>
                        </VBox>

                        <!-- Start Date -->
                        <VBox styleClass="form-section">
                            <Label text="Start Date" styleClass="field-label"/>
                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <Label text="🗓️"
                                       style="-fx-font-size: 22px; -fx-text-fill: #591734; -fx-cursor: hand;"/>

                                <!-- Date Picker -->
                                <DatePicker fx:id="startDatePicker"
                                            promptText="Select booking start date"
                                            styleClass="date-picker"
                                            style="-fx-cursor: hand;"/>
                            </HBox>
                        </VBox>

                        <!-- Notes -->
                        <VBox styleClass="form-section">
                            <Label text="Additional Notes (Optional)" styleClass="field-label"/>
                            <TextArea fx:id="noteField"
                                      promptText="Any special requests or notes..."
                                      styleClass="text-area"/>
                        </VBox>

                        <!-- Confirm Button -->
                        <HBox alignment="CENTER" spacing="16" styleClass="button-row">
                            <Button text="Confirm Booking"
                                    onAction="#handleConfirmBooking"
                                    styleClass="button-primary"/>
                        </HBox>

                    </VBox>
                </VBox>
            </content>
        </ScrollPane>
    </center>

</BorderPane>
