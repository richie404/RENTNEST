<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="OwnerBookingsController"
      stylesheets="@shared.css"
      spacing="14">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="ðŸ“… Manage Property Bookings"
           style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <TableView fx:id="bookingTable" prefHeight="420" styleClass="table-view">
        <columns>
            <TableColumn fx:id="colId" text="Booking ID" prefWidth="100"/>
            <TableColumn fx:id="colProperty" text="Property ID" prefWidth="100"/>
            <TableColumn fx:id="colRenter" text="Renter ID" prefWidth="100"/>
            <TableColumn fx:id="colStart" text="Start Date" prefWidth="120"/>
            <TableColumn fx:id="colEnd" text="End Date" prefWidth="120"/>
            <TableColumn fx:id="colAmount" text="Total Amount" prefWidth="140"/>
            <TableColumn fx:id="colStatus" text="Status" prefWidth="140"/>
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="btnApprove" text="Approve"
                onAction="#handleApprove" styleClass="button-primary"/>
        <Button fx:id="btnReject" text="Reject"
                onAction="#handleReject" styleClass="button-primary"/>
        <Button fx:id="btnCancel" text="Cancel Booking"
                onAction="#handleCancel" styleClass="button-secondary"/>
        <Button fx:id="btnRefresh" text="Refresh" onAction="#handleRefresh" styleClass="button-secondary"/>
    </HBox>
</VBox>
