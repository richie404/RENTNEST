<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="PropertyDetailsController"
            stylesheets="@PropertyDetails.css"
            prefWidth="950" prefHeight="700">

    <!-- ===== Header ===== -->
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT" styleClass="header">
            <Label text="🏠 Property Details" styleClass="label-title"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="⬅ Back to Browse" onAction="#handleBack" styleClass="button-secondary"/>
        </HBox>
    </top>

    <!-- ===== Scrollable Content ===== -->
    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">
            <content>
                <VBox spacing="20" alignment="TOP_CENTER">
                    <padding>
                        <Insets top="20" right="20" bottom="40" left="20"/>
                    </padding>

                    <!-- 🖼️ Image -->
                    <ImageView fx:id="propertyImage" fitWidth="400" fitHeight="250"
                               preserveRatio="true" smooth="true"/>

                    <!-- 🏷️ Text Fields -->
                    <Label fx:id="titleLabel" styleClass="property-title"/>
                    <Label fx:id="locationLabel" styleClass="property-location"/>
                    <Label fx:id="priceLabel" styleClass="property-price"/>

                    <!-- 📝 Description -->
                    <TextArea fx:id="descriptionArea"
                              editable="false" wrapText="true"
                              prefWidth="500" prefHeight="150"
                              styleClass="property-description"/>

                    <!-- ✨ Action Buttons -->
                    <HBox spacing="15" alignment="CENTER">
                        <Button text="Add to Favourites" onAction="#handleFavorite" styleClass="button-primary"/>
                        <Button text="Book Property" onAction="#handleBook" styleClass="button-secondary"/>
                        <Button text="💬 Chat with Owner" onAction="#handleChat" styleClass="button-primary"/>
                    </HBox>

                </VBox>
            </content>
        </ScrollPane>
    </center>

</BorderPane>
