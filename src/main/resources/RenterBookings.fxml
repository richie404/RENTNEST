<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="RenterBookingsController"
      stylesheets="@admin-shared.css"
      spacing="14">

    <!-- Proper padding -->
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Title -->
    <Label text="ðŸ“… My Bookings" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <!-- Table -->
    <TableView fx:id="bookingTable" prefHeight="400">
        <columns>
            <TableColumn fx:id="colBookingId" text="Booking ID" prefWidth="100"/>
            <TableColumn fx:id="colListing" text="Listing ID" prefWidth="100"/> <!-- âœ… fixed name -->
            <TableColumn fx:id="colOwner" text="Owner ID" prefWidth="100"/>
            <TableColumn fx:id="colStart" text="Start Date" prefWidth="120"/>
            <TableColumn fx:id="colEnd" text="End Date" prefWidth="120"/>
            <TableColumn fx:id="colAmount" text="Total Amount" prefWidth="140"/>
            <TableColumn fx:id="colStatus" text="Status" prefWidth="120"/>
        </columns>
    </TableView>

    <!-- Buttons -->
    <HBox spacing="12" alignment="CENTER_RIGHT">
        <Button text="Cancel Booking" onAction="#handleCancel" styleClass="button-primary"/>
    </HBox>
</VBox>
