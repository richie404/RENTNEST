<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="RenterDashboardController"
            stylesheets="@RenterDashboard.css"
            prefWidth="950" prefHeight="700">

    <!-- ðŸ”¹ Shared Top Bar -->
    <top>
        <fx:include source="TopBar.fxml" fx:id="topBar"/>
    </top>

    <!-- ðŸ”¹ Dashboard Tabs -->
    <center>
        <TabPane prefWidth="900" prefHeight="650">
            <tabs>

                <!-- ðŸ¡ Dashboard Tab -->
                <Tab text="Dashboard" closable="false">
                    <BorderPane>
                        <top>
                            <HBox spacing="20" styleClass="header">
                                <padding>
                                    <Insets top="20" right="20" bottom="20" left="20"/>
                                </padding>
                                <Label text="ðŸ¡ Renter Dashboard" styleClass="label-title"/>
                                <Pane HBox.hgrow="ALWAYS"/>
                                <Button text="Browse Properties"
                                        onAction="#handleBrowse"
                                        styleClass="button-secondary"/>
                            </HBox>
                        </top>

                        <center>
                            <VBox spacing="15" alignment="TOP_CENTER" style="-fx-padding: 20;">
                                <Label text="Favorite Properties" styleClass="page-title"/>
                                <ListView fx:id="favoritesList"
                                          prefWidth="750"
                                          prefHeight="400"
                                          styleClass="list-view"/>
                            </VBox>
                        </center>
                    </BorderPane>
                </Tab>

                <!-- ðŸ’¬ Messages Tab -->
                <Tab text="Messages" closable="false">
                    <VBox spacing="12" alignment="TOP_CENTER" style="-fx-padding: 20;">
                        <Label text="Your Chat History" styleClass="page-title"/>
                        <ListView fx:id="messageList"
                                  prefWidth="750"
                                  prefHeight="400"
                                  styleClass="list-view"/>
                        <HBox spacing="10" alignment="CENTER_RIGHT">
                            <Pane HBox.hgrow="ALWAYS"/>
                            <Button text="ðŸ’¬ View Chat"
                                    onAction="#handleViewChat"
                                    styleClass="button-primary"/>
                        </HBox>
                    </VBox>
                </Tab>

                <!-- ðŸ“… My Bookings Tab -->
                <Tab text="My Bookings" closable="false">
                    <fx:include source="RenterBookings.fxml" fx:id="renterBookingsTab"/>
                </Tab>

            </tabs>
        </TabPane>
    </center>
</BorderPane>
