<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="BrowseController"
            stylesheets="@browse.css">

    <!-- ðŸ”¹ Shared TopBar -->
    <top>
        <fx:include source="TopBar.fxml" fx:id="topBar"/>
    </top>

    <!-- ðŸ”¹ Filters (Left Sidebar) -->
    <left>
        <ScrollPane fitToWidth="true" prefWidth="260" styleClass="filter-scroll">
            <content>
                <VBox spacing="12" styleClass="filter-pane">
                    <padding><Insets top="16" right="16" bottom="16" left="16"/></padding>

                    <fx:define>
                        <ToggleGroup fx:id="priceGroup"/>
                        <ToggleGroup fx:id="bedGroup"/>
                    </fx:define>

                    <Label text="Filters" styleClass="filter-title"/>

                    <!-- Price Filters -->
                    <Label text="Price Range" styleClass="filter-label"/>
                    <VBox spacing="5">
                        <RadioButton fx:id="priceAny" text="Any Price" toggleGroup="${priceGroup}" selected="true"/>
                        <RadioButton fx:id="price1" text="à§³0 - à§³10,000" toggleGroup="${priceGroup}"/>
                        <RadioButton fx:id="price2" text="à§³10,000 - à§³20,000" toggleGroup="${priceGroup}"/>
                        <RadioButton fx:id="price3" text="à§³20,000 - à§³30,000" toggleGroup="${priceGroup}"/>
                        <RadioButton fx:id="price4" text="à§³30,000+" toggleGroup="${priceGroup}"/>
                    </VBox>

                    <Separator/>

                    <!-- Property Type -->
                    <Label text="Property Type" styleClass="filter-label"/>
                    <VBox spacing="5">
                        <CheckBox fx:id="typeRoom" text="Room"/>
                        <CheckBox fx:id="typeFlat" text="Flat"/>
                        <CheckBox fx:id="typeApartment" text="Apartment"/>
                        <CheckBox fx:id="typeOffice" text="Office Area"/>
                        <CheckBox fx:id="typeParking" text="Parking"/>
                    </VBox>

                    <Separator/>

                    <!-- Bedrooms -->
                    <Label text="Bedrooms" styleClass="filter-label"/>
                    <VBox spacing="5">
                        <RadioButton fx:id="bedAny" text="Any" toggleGroup="${bedGroup}" selected="true"/>
                        <RadioButton fx:id="bed1" text="1" toggleGroup="${bedGroup}"/>
                        <RadioButton fx:id="bed2" text="2" toggleGroup="${bedGroup}"/>
                        <RadioButton fx:id="bed3" text="3+" toggleGroup="${bedGroup}"/>
                    </VBox>

                    <Separator/>

                    <!-- Amenities -->
                    <Label text="Amenities" styleClass="filter-label"/>
                    <VBox spacing="5">
                        <CheckBox fx:id="amenWifi" text="Wi-Fi"/>
                        <CheckBox fx:id="amenParking" text="Parking"/>
                        <CheckBox fx:id="amenPets" text="Pets Allowed"/>
                        <CheckBox fx:id="amenLift" text="Lift"/>
                        <CheckBox fx:id="amenSecurity" text="Security"/>
                    </VBox>

                    <Separator/>

                    <!-- Buttons -->
                    <Button text="Apply Filters" styleClass="btn-apply" onAction="#handleApplyFilters"/>
                    <Button text="Reset" styleClass="btn-reset" onAction="#handleResetFilters"/>
                </VBox>
            </content>
        </ScrollPane>
    </left>

    <!-- ðŸ”¹ Property Grid -->
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" styleClass="scroller">
            <content>
                <GridPane fx:id="grid" hgap="10" vgap="10">
                    <padding><Insets top="16" right="16" bottom="24" left="16"/></padding>
                </GridPane>
            </content>
        </ScrollPane>
    </center>

</BorderPane>
